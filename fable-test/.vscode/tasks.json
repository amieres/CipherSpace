{
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "install",
      "args": [ "install" ]
    },
    {
      "taskName": "start",
      "args": [ "run", "start" ],
      "isBuildCommand": true
    },
    {
      "taskName": "watch",
      "args": [ "run", "watch" ],
      "isBackground": true
    }
  ]
}